.header-container
  - if @show_header_h1
    h1.header-h1
      = @header_h1
  .logo-and-locales-bar
    a.logo title="Перейти на головну сторінку" href=root_path = inline_svg "svg/header-logo.svg"
    - if @_locale_links.try(:any?)
      .locales-bar
        - @_locale_links.each do |locale, url|
          - active = locale == I18n.locale.to_sym
          - if !active
            a href=url title=t("components.locales-bar.locale-html-title.#{locale}")
              = Cms.config.locale_names[locale]
  .right-part
    a.dib title="Зв'язатись з нами" href="tel:0800502214"
      .dib.icon = inline_svg "svg/headphones.svg"
      .dib
        p.larger 0 800 50 22 14
        p.small Інфолінія

    .dib.hamburger.hamburger--spring title="Відкрити/закрити меню"
      span.hamburger-box
        span.hamburger-inner